<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ts.animal.dao.SupplierDao">

	<select id="get" resultType="com.ts.animal.domain.SupplierDO">
		select `id`,`name`,`address`,`head_man`,`phone`,`email`,`field`,`dept_id`,`other_info`,`create_user`,`create_time`,`update_user`,`update_time`,`remark1`,`remark2`,`remark3` from bs_supplier where id = #{value}
	</select>

	<select id="list" resultType="com.ts.animal.domain.SupplierDO">
		select `id`,`name`,`address`,`head_man`,`phone`,`email`,`field`,`dept_id`,`other_info`,`create_user`,`create_time`,`update_user`,`update_time`,`remark1`,`remark2`,`remark3` from bs_supplier
		<include refid="com.ts.system.dao.DeptDao.subDept"/>
		<include refid="com.ts.system.dao.DeptDao.subDeptByUser" /> 
        <where>  
		  		  <if test="id != null and id != ''"> and id = #{id} </if>
		  		  <if test="name != null and name != ''"> and name = #{name} </if>
		  		  <if test="address != null and address != ''"> and address = #{address} </if>
		  		  <if test="headMan != null and headMan != ''"> and head_man = #{headMan} </if>
		  		  <if test="phone != null and phone != ''"> and phone = #{phone} </if>
		  		  <if test="email != null and email != ''"> and email = #{email} </if>
		  		  <if test="field != null and field != ''"> and field = #{field} </if>
		  		  <if test="deptId != null and deptId != ''"> and dept_id = #{deptId} </if>
		  		  <if test="otherInfo != null and otherInfo != ''"> and other_info = #{otherInfo} </if>
		  		  <if test="createUser != null and createUser != ''"> and create_user = #{createUser} </if>
		  		  <if test="createTime != null and createTime != ''"> and create_time = #{createTime} </if>
		  		  <if test="updateUser != null and updateUser != ''"> and update_user = #{updateUser} </if>
		  		  <if test="updateTime != null and updateTime != ''"> and update_time = #{updateTime} </if>
		  		  <if test="remark1 != null and remark1 != ''"> and remark1 = #{remark1} </if>
		  		  <if test="remark2 != null and remark2 != ''"> and remark2 = #{remark2} </if>
		  		  <if test="remark3 != null and remark3 != ''"> and remark3 = #{remark3} </if>
		  		</where>
        <choose>
            <when test="sort != null and sort.trim() != ''">
                order by ${sort} ${order}
            </when>
			<otherwise>
                order by id desc
			</otherwise>
        </choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="count" resultType="int">
		select count(*) from bs_supplier
		 <where>  
		  		  <if test="id != null and id != ''"> and id = #{id} </if>
		  		  <if test="name != null and name != ''"> and name = #{name} </if>
		  		  <if test="address != null and address != ''"> and address = #{address} </if>
		  		  <if test="headMan != null and headMan != ''"> and head_man = #{headMan} </if>
		  		  <if test="phone != null and phone != ''"> and phone = #{phone} </if>
		  		  <if test="email != null and email != ''"> and email = #{email} </if>
		  		  <if test="field != null and field != ''"> and field = #{field} </if>
		  		  <if test="deptId != null and deptId != ''"> and dept_id = #{deptId} </if>
		  		  <if test="otherInfo != null and otherInfo != ''"> and other_info = #{otherInfo} </if>
		  		  <if test="createUser != null and createUser != ''"> and create_user = #{createUser} </if>
		  		  <if test="createTime != null and createTime != ''"> and create_time = #{createTime} </if>
		  		  <if test="updateUser != null and updateUser != ''"> and update_user = #{updateUser} </if>
		  		  <if test="updateTime != null and updateTime != ''"> and update_time = #{updateTime} </if>
		  		  <if test="remark1 != null and remark1 != ''"> and remark1 = #{remark1} </if>
		  		  <if test="remark2 != null and remark2 != ''"> and remark2 = #{remark2} </if>
		  		  <if test="remark3 != null and remark3 != ''"> and remark3 = #{remark3} </if>
		  		</where>
	</select>
	 
	<insert id="save" parameterType="com.ts.animal.domain.SupplierDO" useGeneratedKeys="true" keyProperty="id">
		insert into bs_supplier
		(
			`name`, 
			`address`, 
			`head_man`, 
			`phone`, 
			`email`, 
			`field`, 
			`dept_id`, 
			`other_info`, 
			`create_user`, 
			`create_time`, 
			`update_user`, 
			`update_time`, 
			`remark1`, 
			`remark2`, 
			`remark3`
		)
		values
		(
			#{name}, 
			#{address}, 
			#{headMan}, 
			#{phone}, 
			#{email}, 
			#{field}, 
			#{deptId}, 
			#{otherInfo}, 
			#{createUser}, 
			#{createTime}, 
			#{updateUser}, 
			#{updateTime}, 
			#{remark1}, 
			#{remark2}, 
			#{remark3}
		)
	</insert>
	 
	<update id="update" parameterType="com.ts.animal.domain.SupplierDO">
		update bs_supplier 
		<set>
			<if test="name != null">`name` = #{name}, </if>
			<if test="address != null">`address` = #{address}, </if>
			<if test="headMan != null">`head_man` = #{headMan}, </if>
			<if test="phone != null">`phone` = #{phone}, </if>
			<if test="email != null">`email` = #{email}, </if>
			<if test="field != null">`field` = #{field}, </if>
			<if test="deptId != null">`dept_id` = #{deptId}, </if>
			<if test="otherInfo != null">`other_info` = #{otherInfo}, </if>
			<if test="createUser != null">`create_user` = #{createUser}, </if>
			<if test="createTime != null">`create_time` = #{createTime}, </if>
			<if test="updateUser != null">`update_user` = #{updateUser}, </if>
			<if test="updateTime != null">`update_time` = #{updateTime}, </if>
			<if test="remark1 != null">`remark1` = #{remark1}, </if>
			<if test="remark2 != null">`remark2` = #{remark2}, </if>
			<if test="remark3 != null">`remark3` = #{remark3}</if>
		</set>
		where id = #{id}
	</update>
	
	<delete id="remove">
		delete from bs_supplier where id = #{value}
	</delete>
	
	<delete id="batchRemove">
		delete from bs_supplier where id in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

</mapper>