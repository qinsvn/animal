<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"  
    xmlns:context="http://www.springframework.org/schema/context"  
    xmlns:mvc="http://www.springframework.org/schema/mvc"  
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"   
    xsi:schemaLocation=  
    "http://www.springframework.org/schema/beans  
    http://www.springframework.org/schema/beans/spring-beans-4.1.xsd  
    http://www.springframework.org/schema/context  
    http://www.springframework.org/schema/context/spring-context-4.1.xsd  
    http://www.springframework.org/schema/mvc  
    http://www.springframework.org/schema/mvc/spring-mvc-4.1.xsd">  
          
          <!-- 执行对象  执行方法 更新所有用户信息 -->  
        <bean id="statisticsJob" class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean">  
            <property name="targetObject" ref="statisticsTask"></property>  
            <property name="targetMethod" value="action"></property>  
            <property name="concurrent" value="false"></property>  
        </bean> 
        
    	<!-- cron规则执行(定时任务)   更新所有用户信息--> 
        <bean id="statisticsCronTrigger" class="org.springframework.scheduling.quartz.CronTriggerFactoryBean">  
	        <property name="jobDetail" ref="statisticsJob"></property>  
	        <property name="cronExpression">  
	            <value>0 59 23 ? * *</value><!--   0/10 * * * * ?        0 59 23 ? * *      23:59 执行一次 -->  <!-- >0 */1 * * * ? 一分钟一次 --> 
	        </property>  
    	</bean>
    	
         <!-- 定时任务 -->
        <bean id="schedulerTaskFactory" class="org.springframework.scheduling.quartz.SchedulerFactoryBean">  
            <property name="triggers">  
                <list> 
                    <ref bean="statisticsCronTrigger"/>
                </list>  
            </property>  
        </bean> 
        
  </beans>  