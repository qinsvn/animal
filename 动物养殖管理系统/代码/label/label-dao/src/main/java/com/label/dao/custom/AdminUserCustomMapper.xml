<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.label.dao.custom.AdminUserCustomMapper">
	<select id="listUserByCompanyId" parameterType="java.util.Map" resultType="java.util.Map">
		SELECT u.id, u.fdAccount, u.fdPassword FROM tb_admin_user u WHERE u.fdConpanyId = #{cid}
	</select>

	<update id="updateCompanyUser" parameterType="java.util.Map">
		UPDATE tb_admin_user SET fdConpanyId = NULL, fdType = 1, fdLocked = 1 WHERE fdConpanyId IN
		<foreach collection="list" item="item" open="(" close=")" separator=",">
	  		#{item}
	  	</foreach>
	</update>
	
	<insert id="insertAdminUserReturnId" useGeneratedKeys="true" keyProperty="id" parameterType="com.label.common.model.base.AdminUser">
    insert into tb_admin_user
    <trim prefix="(" suffix=")" suffixOverrides=",">
      <if test="id != null">
        id,
      </if>
      <if test="fdAccount != null">
        fdAccount,
      </if>
      <if test="fdPassword != null">
        fdPassword,
      </if>
      <if test="fdName != null">
        fdName,
      </if>
      <if test="fdEmail != null">
        fdEmail,
      </if>
      <if test="fdPhone != null">
        fdPhone,
      </if>
      <if test="fdIdcard != null">
        fdIdcard,
      </if>
      <if test="fdLocked != null">
        fdLocked,
      </if>
      <if test="fdConpanyId != null">
        fdConpanyId,
      </if>
      <if test="fdType != null">
        fdType,
      </if>
      <if test="fdCreateUser != null">
        fdCreateUser,
      </if>
      <if test="fdCreateTime != null">
        fdCreateTime,
      </if>
      <if test="fdRoles != null">
        fdRoles,
      </if>
    </trim>
    <trim prefix="values (" suffix=")" suffixOverrides=",">
      <if test="id != null">
        #{id,jdbcType=INTEGER},
      </if>
      <if test="fdAccount != null">
        #{fdAccount,jdbcType=VARCHAR},
      </if>
      <if test="fdPassword != null">
        #{fdPassword,jdbcType=VARCHAR},
      </if>
      <if test="fdName != null">
        #{fdName,jdbcType=VARCHAR},
      </if>
      <if test="fdEmail != null">
        #{fdEmail,jdbcType=VARCHAR},
      </if>
      <if test="fdPhone != null">
        #{fdPhone,jdbcType=VARCHAR},
      </if>
      <if test="fdIdcard != null">
        #{fdIdcard,jdbcType=VARCHAR},
      </if>
      <if test="fdLocked != null">
        #{fdLocked,jdbcType=TINYINT},
      </if>
      <if test="fdConpanyId != null">
        #{fdConpanyId,jdbcType=INTEGER},
      </if>
      <if test="fdType != null">
        #{fdType,jdbcType=TINYINT},
      </if>
      <if test="fdCreateUser != null">
        #{fdCreateUser,jdbcType=INTEGER},
      </if>
      <if test="fdCreateTime != null">
        #{fdCreateTime,jdbcType=TIMESTAMP},
      </if>
      <if test="fdRoles != null">
        #{fdRoles,jdbcType=VARCHAR},
      </if>
    </trim>
  </insert>
  <select id="selectByWhere" resultType="java.util.Map" parameterType="java.util.Map">
  	Select au.*,com.fdName companyName from tb_admin_user au left join tb_company com
  	on au.fdConpanyId = com.id
  	<where>
  		<trim suffixOverrides="and">		
	  		<if test="fdName !=null and fdName !='' " >
	  			au.fdName like CONCAT('%', #{fdName}, '%') and
	  		</if>
	  		<if test="fdLocked !=null and fdLocked !=''">
	  			au.fdLocked = #{fdLocked} and
	  		</if>
	  		<if test="fdConpanyId != null and fdConpanyId != ''">
	  			au.fdConpanyId = #{fdConpanyId} and
	  		</if>
	  		<if test="fdPhone != null and fdPhone !='' ">
	  			au.fdPhone like  CONCAT('%', #{fdPhone}, '%') and
	  		</if>
	  		<if test="companyName != null and companyName != ''">
	  			com.fdName like CONCAT('%', #{companyName}, '%') and
	  		</if>
  		</trim>
  	</where>
  	ORDER BY au.fdCreateTime DESC
  </select>
</mapper>